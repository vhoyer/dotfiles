#!/bin/bash
helpmsg="usage: vhgclone <github username>/<github repo name> [folder]\n\ntry \"vhgclone [-h|--help]\" for more information."
CLONE() {
	# build the git clone command
	gitclone="git clone https://github.com/"$1

	# test if there is the folder arg
	if [[ $# -eq 2 ]]; then
		gitclone=$gitclone" "$2
	fi

	eval $gitclone
}

if [[ $# -gt 1 ]]; then
	# execute the command
	exit 1
########################################
elif [[ $# -eq 1 ]]; then
	if [[ $1 == "-h" ]] || [[ $1 == "--help" ]]; then
		echo -e "usage: vhgclone <github username>/<github repo name> [folder]\n\nThere is no more help... sorry for that."
		exit 1
	elif [[ $1 == *"/"* ]]; then
		CLONE $1
		exit 1
	fi
	########################################
	echo -e $helpmsg
	exit 0
elif [[ $# -eq 2 ]]; then
	if [[ $1 == *"/"* ]]; then
		CLONE $1 $2
	fi
else
	echo -e $helpmsg
	exit 0
fi
#vim:filetype=sh
